// nextflow.config

params {
    input = 'data/data_fastq.csv'  // Valor predeterminado, se sobrescribirá con --input en la línea de comando
    output_dir = 'Results'         // Valor predeterminado, se sobrescribirá con --output_dir en la línea de comando
    savescript = ''
}

process {
    withLabel: low_memory {
        memory = '4 GB'
        cpus = 2
    }

    withLabel: high_memory {
        memory = '16 GB'
        cpus = 8
    }

    withName: fastqc {
        cpus = 4
        memory = '8 GB'
        container = 'biocontainers/fastqc:v0.11.9_cv8'
    }
}

executor {
    name = 'local'
}

docker {
    enabled = true
}
